<html lang="en"><head>
	<meta charset="UTF-8">
		
		<title>Eat-Da-Burger</title>
		<!-- Latest compiled and minified CSS -->
 		 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
 		 <!-- Stylesheet after Bootstrap -->
 		 <link rel="stylesheet" href="/assets/css/burger_style.css" type="text/css">
</head>
	
	<body>
		<div class="container"> 
  <div class="jumbotron"> 
    <img src="/assets/img/burger.jpeg" width="200" height="200"> 
    <h1> Eat-Da-Burger! </h1>
  </div>

<!-- Available Burgers -->
  <div class="row">
    

    <div class="col-md-4 col-md-offset-1">
      <div class="panel-panel default">
        <h1> Burgers</h1>
        <ul class="list-group">
        <!-- Handlebars -->
      </ul>
    
    </div>
  </div>

  <!-- Burgers consumed -->
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <h1>Devoured Burgers</h1>
      <div class="panel panel-default">
        <ul class="list-group">
        <!-- Handlebars -->
          <li class="list-group-item">
            <p class="lead"> Cheese Burger </p>
          </li>
          <li class="list-group-item">
            <p class="lead"> Cheese Bacon Burger </p>
          </li>
          <li class="list-group-item">
            <p class="lead"> Chicken Burger </p>
          </li>
          
          
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <p class="lead"> Enter the burger you want to eat &amp; click the submit button. </p>
    <!-- Add New Burgers -->
    <!-- Post method -->
    <form class="create-update-form" action="burgers/create" method="POST">
      <div class="form-group">
        <textarea class="form-control input-lg" type="text" name="burger_name" rows="3"> </textarea>
      </div>
     <button class="btn btn-default btn-lg" type="submit">Submit!</button>
    </form>
  
  </div>
</div>


	
</div></body>

</html>